<% color = flash_color name %>
<!--  start message-yellow -->
<div id="message-<%=color%>">
  <table border="0" width="100%" cellpadding="0" cellspacing="0">
    <tr>
      <td class="<%=color%>-left"><%= msg %></td>
      <td class="<%=color%>-right"><a class="close-<%=color%>"><%= image_tag "admin/table/icon_close_#{color}.gif" %></a>
      </td>
    </tr>
  </table>
</div>
<!--  end message-yellow -->