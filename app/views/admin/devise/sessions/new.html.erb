<div id="login-bg">
  <!-- Start: login-holder -->
  <div id="login-holder">

    <!-- start logo -->
    <div id="title-login">

    </div>
    <!-- end logo -->

    <div class="clear"></div>

    <!--  start loginbox ................................................................................. -->
    <div id="loginbox">

      <!--  start login-inner -->
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <div id="login-inner">
            <table border="0" cellpadding="0" cellspacing="0">
              <tr>
                <th><%= f.label :email %></th>
                <td><%= f.email_field :email, :class => 'login-inp' %></td>
              </tr>
              <tr>
                <th><%= f.label :password %></th>
                <td><%= f.password_field :password, :class => 'login-inp' %></td>
              </tr>
              <% if devise_mapping.rememberable? -%>
                  <tr>
                    <th></th>
                    <td valign="top"><%= f.check_box :remember_me %> <%= f.label :remember_me %></td>
                  </tr>
              <% end -%>
              <tr>
                <th></th>
                <td><%= f.submit "Sign in", :class => 'submit-login' %></td>
              </tr>
            </table>
          </div>
      <% end %>

      <!--  end login-inner -->
      <div class="clear"></div>

    </div>
    <!--  end loginbox -->

  </div>
  <!-- End: login-holder -->
</div>

